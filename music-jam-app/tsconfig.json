{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@tauri-apps/api/*": ["./node_modules/@tauri-apps/api/*"]
    },
    "types": [
      "@tauri-apps/api"
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
